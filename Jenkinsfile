    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Application Status: Building'
            }
        }
        stage('Test') {
            steps {
                echo 'Test Status: Running'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Application Status: Deploying'
            }
        }
    }
}
